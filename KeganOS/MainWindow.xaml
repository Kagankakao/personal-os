<Window x:Class="KeganOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeganOS" 
        Height="750" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        FontFamily="Consolas">
    
    <Window.Resources>
        <!-- ASCII border style -->
        <Style x:Key="AsciiBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- Bracket button style -->
        <Style x:Key="BracketButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock>
                            <Run Text="[" Foreground="#666666"/>
                            <Run Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                            <Run Text="]" Foreground="#666666"/>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Quote -->
            <RowDefinition Height="Auto"/> <!-- KEGOMODORO + Stats -->
            <RowDefinition Height="*"/>    <!-- Journal -->
            <RowDefinition Height="Auto"/> <!-- AI Chat -->
            <RowDefinition Height="Auto"/> <!-- Milestone -->
        </Grid.RowDefinitions>
        
        <!-- ═══ TOP BAR ═══ -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Personal Symbol -->
            <TextBlock Text="KAÆ[Æß#" Foreground="#888888" FontSize="14" VerticalAlignment="Center"
                       x:Name="PersonalSymbol"/>
            
            <!-- User + Settings -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                <TextBlock Text="Kegan" Foreground="#CCCCCC" FontSize="14" VerticalAlignment="Center"
                           x:Name="UserDisplayName"/>
                <TextBlock Text="  ⚙" Foreground="#666666" FontSize="14" Cursor="Hand"/>
            </StackPanel>
        </Grid>
        
        <!-- ═══ MOTIVATIONAL QUOTE ═══ -->
        <Border Grid.Row="1" Style="{StaticResource AsciiBox}">
            <TextBlock x:Name="MotivationalQuote" 
                       Text="&quot;Discipline is freedom in its purest form.&quot;"
                       Foreground="#CCCCCC" FontSize="13" TextWrapping="Wrap" FontStyle="Italic"/>
        </Border>
        
        <!-- ═══ KEGOMODORO + STATS ═══ -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- KEGOMODORO Widget -->
            <Border Grid.Column="0" Style="{StaticResource AsciiBox}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="│" Foreground="#444444"/>
                        <TextBlock Text=" KEGOMODORO" Foreground="#888888" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,15">
                        <TextBlock Text="🍅" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="25:00" Foreground="#FFFFFF" FontSize="28" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"
                                   x:Name="TimerDisplay"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource BracketButton}" 
                                Content="▶ Start Focus" Foreground="#87CEEB"
                                x:Name="StartFocusButton" Click="StartFocusButton_Click"/>
                        <Button Style="{StaticResource BracketButton}" 
                                Content="⚙ Customize" Margin="15,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Your Stats -->
            <Border Grid.Column="2" Style="{StaticResource AsciiBox}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="📊" FontSize="12"/>
                        <TextBlock Text=" Your Stats" Foreground="#888888" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <Grid Margin="0,5,0,3">
                        <TextBlock Text="Today:" Foreground="#666666"/>
                        <TextBlock Text="0 hrs" HorizontalAlignment="Right" Foreground="#AAAAAA" x:Name="TodayHours"/>
                    </Grid>
                    <Grid Margin="0,3">
                        <TextBlock Text="Week:" Foreground="#666666"/>
                        <TextBlock Text="12 hrs" HorizontalAlignment="Right" Foreground="#AAAAAA" x:Name="WeekHours"/>
                    </Grid>
                    <Grid Margin="0,3,0,10">
                        <TextBlock Text="Total:" Foreground="#666666"/>
                        <TextBlock Text="749 hrs" HorizontalAlignment="Right" Foreground="#FFFFFF" FontWeight="Bold" x:Name="TotalHours"/>
                    </Grid>
                    
                    <!-- Mini Heatmap Placeholder -->
                    <TextBlock Text="▄▄▆▄▂▄▆█▆▄▂▄" Foreground="#4A6B4A" FontSize="10" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- ═══ JOURNAL ═══ -->
        <Border Grid.Row="3" Style="{StaticResource AsciiBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="│ What's on your mind?" Foreground="#888888" Margin="0,0,0,10"/>
                
                <TextBox Grid.Row="1" x:Name="JournalInput"
                         Background="Transparent" 
                         Foreground="#CCCCCC"
                         BorderBrush="#333333" BorderThickness="1"
                         Padding="10"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         CaretBrush="#CCCCCC"/>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Style="{StaticResource BracketButton}" 
                            Content="Save to Journal" Foreground="#AAAAAA"
                            x:Name="SaveJournalButton" Click="SaveJournalButton_Click"/>
                    <Button Style="{StaticResource BracketButton}" 
                            Content="📁 Open File" Foreground="#FFB347" Margin="15,0,0,0"
                            x:Name="OpenNotepadButton" Click="OpenNotepadButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- ═══ AI CHAT ═══ -->
        <Border Grid.Row="4" Style="{StaticResource AsciiBox}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="🤖" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                
                <TextBox Grid.Column="1" x:Name="AIChatInput"
                         Text="Ask me anything about your journey..."
                         Background="Transparent" Foreground="#666666"
                         BorderThickness="0" Padding="5"
                         VerticalContentAlignment="Center"
                         CaretBrush="#CCCCCC"/>
                
                <TextBlock Grid.Column="2" Text="[↵]" Foreground="#444444" VerticalAlignment="Center"
                           Cursor="Hand" x:Name="AskAIButton" MouseDown="AskAIButton_Click"/>
            </Grid>
        </Border>
        
        <!-- ═══ MILESTONE ═══ -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="💡" FontSize="12"/>
            <TextBlock Foreground="#777777" FontSize="12" Margin="5,0,0,0"
                       x:Name="MilestoneMessage">
                <Run Text="1 year ago today: "/>
                <Run Text="&quot;IT HAS BEGUN&quot;" Foreground="#AAAAAA"/>
                <Run Text=" - You started something special. That fire is still in you."/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
