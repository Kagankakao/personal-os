<Window x:Class="KeganOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:comp="clr-namespace:KeganOS.Views.Components"
        Title="KeganOS" 
        Height="750" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- ASCII border style -->
        <Style x:Key="AsciiBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- Bracket button style -->
        <Style x:Key="BracketButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock>
                            <Run Text="[" Foreground="#666666"/>
                            <Run Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                            <Run Text="]" Foreground="#666666"/>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Title bar button style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid x:Name="RootGrid" Background="Transparent" Focusable="True" MouseDown="RootGrid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/> <!-- Custom Title Bar -->
                <RowDefinition Height="*"/>  <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- ═══ CUSTOM TITLE BAR ═══ -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <TextBlock Text="KeganOS" Foreground="#555555" FontSize="11" 
                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="─" Style="{StaticResource TitleBarButton}" Click="MinimizeButton_Click"/>
                    <Button Content="□" Style="{StaticResource TitleBarButton}" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TitleBarButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C42B1C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- ═══ MAIN CONTENT ═══ -->
            <Grid Grid.Row="1" Margin="20,10,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Quote -->
                    <RowDefinition Height="Auto"/> <!-- KEGOMODORO + Stats -->
                    <RowDefinition Height="*"/>    <!-- Journal -->
                    <RowDefinition Height="Auto"/> <!-- AI Chat -->
                    <RowDefinition Height="Auto"/> <!-- Milestone -->
                </Grid.RowDefinitions>
                
                <!-- ═══ TOP BAR ═══ -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Personal Symbol -->
                    <TextBlock Text="KAÆ[Æß#" Foreground="#888888" FontSize="14" VerticalAlignment="Center"
                               x:Name="PersonalSymbol"/>
                    
                    <!-- User + Settings -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Kegan" Foreground="#CCCCCC" FontSize="14" VerticalAlignment="Center"
                                   x:Name="UserDisplayName"/>
                        <Button x:Name="AddTimeButton" Content="➕" Foreground="#6BFF6B" FontSize="14" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="8,0,0,0"
                                Click="AddTimeButton_Click" ToolTip="Add Manual Time"/>
                        <Button x:Name="AchievementsButton" Content="🏆" Foreground="#FFD700" FontSize="14" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="8,0,0,0"
                                Click="AchievementsButton_Click" ToolTip="Achievements"/>
                        <Button x:Name="SettingsButton" Content="⚙" Foreground="#666666" FontSize="14" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="8,0,0,0"
                                Click="SettingsButton_Click" ToolTip="Settings"/>
                    </StackPanel>
                </Grid>
                
                <!-- ═══ SCROLLING NEWS TICKER ═══ -->
                <Border Grid.Row="1" Style="{StaticResource AsciiBox}" ClipToBounds="True">
                    <Canvas x:Name="TickerCanvas" Height="25">
                        <TextBlock x:Name="TickerText" 
                                   Text="📜 Loading quotes from journal..."
                                   Foreground="#CCCCCC" FontSize="13" FontStyle="Italic"
                                   Canvas.Top="3">
                            <TextBlock.RenderTransform>
                                <TranslateTransform x:Name="TickerTransform" X="0"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Canvas>
                </Border>
                
                <!-- ═══ KEGOMODORO + STATS ═══ -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- KEGOMODORO Widget -->
                    <Border Grid.Column="0" Style="{StaticResource AsciiBox}">
                        <StackPanel>
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="│" Foreground="#444444"/>
                                <TextBlock Text=" KEGOMODORO" Foreground="#888888" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <!-- Timer Display -->
                            <StackPanel HorizontalAlignment="Center" Margin="0,5,0,15">
                                <Image x:Name="FireImage" Width="60" Height="60" Stretch="Uniform"
                                       HorizontalAlignment="Center" Opacity="0.9"/>
                                <TextBlock Text="25:00" Foreground="#FFFFFF" FontSize="28" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Margin="0,8,0,0"
                                           FontFamily="Consolas" x:Name="TimerDisplay"/>
                            </StackPanel>
                            
                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource BracketButton}" 
                                        Content="▶ Start Focus" Foreground="#87CEEB"
                                        x:Name="StartFocusButton" Click="StartFocusButton_Click"/>
                                <Button Style="{StaticResource BracketButton}" 
                                        Content="⚙ Customize" Margin="15,0,0,0"
                                        x:Name="CustomizeButton" Click="CustomizeButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Your Stats -->
                    <Border Grid.Column="2" Style="{StaticResource AsciiBox}" 
                            MouseLeftButtonDown="Stats_Click" Cursor="Hand" Background="Transparent">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="📊" FontSize="12"/>
                                <TextBlock Text=" Your Stats" Foreground="#888888" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <Grid Margin="0,5,0,3">
                                <TextBlock Text="Today:" Foreground="#666666"/>
                                <TextBlock Text="0 hrs" HorizontalAlignment="Right" Foreground="#AAAAAA" x:Name="TodayHours"/>
                            </Grid>
                            <Grid Margin="0,3">
                                <TextBlock Text="Week:" Foreground="#666666"/>
                                <TextBlock Text="0 hrs" HorizontalAlignment="Right" Foreground="#AAAAAA" x:Name="WeekHours"/>
                            </Grid>
                            <Grid Margin="0,3,0,10">
                                <TextBlock Text="Total:" Foreground="#666666"/>
                                <TextBlock Text="0 hrs" HorizontalAlignment="Right" Foreground="#FFFFFF" FontWeight="Bold" x:Name="TotalHours"/>
                            </Grid>
                            
                            
                            <!-- Pixe.la Heatmap (WebView2 for modern Edge rendering) -->
                            <Border BorderBrush="#333333" BorderThickness="1" Margin="0,5,0,0" 
                                    Background="#0A0A0A" Padding="0" CornerRadius="3">
                                <wv2:WebView2 x:Name="PixelaHeatmapWebView" Height="80"
                                              DefaultBackgroundColor="Transparent"/>
                            </Border>
                            <TextBlock x:Name="PixelaStatus" Text="📊 Click a pixel to edit" 
                                       Foreground="#555555" FontSize="9" HorizontalAlignment="Center" 
                                       Margin="0,5,0,0"/>

                            <!-- Quick Palette -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button x:Name="ColorGreen" Tag="shibafu" Background="#70cc14" Width="14" Height="14" Margin="2,0" BorderThickness="0" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Green"/>
                                <Button x:Name="ColorRed" Tag="momiji" Background="#f3591e" Width="14" Height="14" Margin="2,0" BorderThickness="0" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Red"/>
                                <Button x:Name="ColorBlue" Tag="sora" Background="#00aced" Width="14" Height="14" Margin="2,0" BorderThickness="0" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Blue"/>
                                <Button x:Name="ColorYellow" Tag="ichou" Background="#e4b41b" Width="14" Height="14" Margin="2,0" BorderThickness="0" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Yellow"/>
                                <Button x:Name="ColorPurple" Tag="ajisai" Background="#7246df" Width="14" Height="14" Margin="2,0" BorderThickness="0" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Purple"/>
                                <Button x:Name="ColorBlack" Tag="kuro" Background="#222222" Width="14" Height="14" Margin="2,0" BorderThickness="1" BorderBrush="#444444" Click="PaletteColor_Click" Cursor="Hand" ToolTip="Black"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- ═══ JOURNAL ═══ -->
                <Border Grid.Row="3" Style="{StaticResource AsciiBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="│ What's on your mind?" Foreground="#888888" Margin="0,0,0,10"/>
                        
                        <TextBox Grid.Row="1" x:Name="JournalInput"
                                 Background="Transparent" 
                                 Foreground="#CCCCCC"
                                 BorderBrush="#333333" BorderThickness="1"
                                 Padding="10"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 CaretBrush="#CCCCCC"
                                 GotFocus="JournalInput_GotFocus"
                                 LostFocus="JournalInput_LostFocus"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Style="{StaticResource BracketButton}" 
                                    Content="Save to Journal" Foreground="#AAAAAA"
                                    x:Name="SaveJournalButton" Click="SaveJournalButton_Click"/>
                            <Button Style="{StaticResource BracketButton}" 
                                    Content="📁 Open File" Foreground="#FFB347" Margin="15,0,0,0"
                                    x:Name="OpenNotepadButton" Click="OpenNotepadButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- ═══ FLOATING ASK PROMETHEUS BUTTON ═══ -->
            <Border x:Name="AskPrometheusButton" 
                    Grid.Row="1"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,25,25"
                    Background="#1A1A1A"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12,8"
                    Cursor="Hand"
                    MouseDown="AskPrometheusButton_Click"
                    Panel.ZIndex="100">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <!-- Placeholder for logo - will be replaced with Image when provided -->
                    <TextBlock Text="🔥" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Ask Prometheus" Foreground="#CCCCCC" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Full-screen Celebration Overlay -->
            <comp:CelebrationOverlay x:Name="MajorCelebrationOverlay" Visibility="Collapsed" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</Window>
