<Window x:Class="KeganOS.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
        
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style x:Key="SettingsPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Settings" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="14"/>
                <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        Width="35" Height="35" Background="Transparent" BorderThickness="0"
                        Foreground="#888888" Click="CloseButton_Click" Cursor="Hand"/>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                <StackPanel Margin="30,10,30,20">
                    
                    <!-- Profile Section -->
                    <TextBlock Text="â•â•â• Profile â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ‘¤ Name:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11"/>
                        <TextBox x:Name="DisplayNameTextBox" Grid.Column="1" Style="{StaticResource SettingsTextBox}" Padding="8,5"/>
                        
                        <TextBlock Text="â­ Symbol:" Grid.Column="2" Foreground="#888888" VerticalAlignment="Center" Margin="15,0,10,0" FontSize="11"/>
                        <TextBox x:Name="SymbolTextBox" Grid.Column="3" Style="{StaticResource SettingsTextBox}" MaxLength="2" Padding="8,5" HorizontalContentAlignment="Center"/>
                    </Grid>
                    
                    <Button x:Name="ChangeAvatarButton" Content="ðŸ–¼ï¸ [Change Avatar...]" 
                            Background="Transparent" Foreground="#87CEEB" BorderThickness="0"
                            Padding="0" HorizontalAlignment="Left" Click="ChangeAvatarButton_Click" Cursor="Hand" FontSize="11"/>
                    
                    <!-- AI Configuration Section -->
                    <TextBlock Text="â•â•â• AI Configuration â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    
                    <TextBlock Text="ðŸ”‘ Gemini API Key:" Foreground="#888888" Margin="0,0,0,5" FontSize="11"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <PasswordBox x:Name="ApiKeyPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>
                        <Button x:Name="ShowApiKeyButton" Grid.Column="1" Content="ðŸ‘ï¸" Width="35" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="ShowApiKeyButton_Click" Padding="0"/>
                        <Button x:Name="TestApiButton" Grid.Column="2" Content="Test" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="TestApiButton_Click" Padding="15,0"/>
                    </Grid>
                    
                    <Grid Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status: " Foreground="#666666" FontSize="11"/>
                            <TextBlock x:Name="ApiStatusText" Text="âœ… Configured" Foreground="#88CC88" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Text="[Get Key â†—]" Foreground="#87CEEB" Cursor="Hand" HorizontalAlignment="Right"
                                   MouseDown="GetApiKeyLink_Click" FontSize="11"/>
                    </Grid>
                    
                    <!-- Pixe.la Account Section -->
                    <TextBlock Text="â•â•â• Pixe.la Account â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    
                    <TextBlock Text="ðŸ‘¤ Username:" Foreground="#888888" Margin="0,0,0,5" FontSize="11"/>
                    <TextBox x:Name="PixelaUsernameTextBox" Style="{StaticResource SettingsTextBox}" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="ðŸ”‘ Token:" Foreground="#888888" Margin="0,0,0,5" FontSize="11"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PixelaTokenPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>
                        <Button x:Name="ShowPixelaTokenButton" Grid.Column="1" Content="ðŸ‘ï¸" Width="35" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="ShowPixelaTokenButton_Click" Padding="0"/>
                    </Grid>
                    
                    <TextBlock Text="ðŸ“Š Graph ID:" Foreground="#888888" Margin="0,10,0,5" FontSize="11"/>
                    <TextBox x:Name="PixelaGraphIdTextBox" Style="{StaticResource SettingsTextBox}"/>


                    <!-- Backup Section -->
                    <TextBlock Text="â•â•â• Backup â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    
                    <TextBlock Text="ðŸ“ Location:" Foreground="#888888" Margin="0,0,0,5" FontSize="11"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="BackupLocationTextBox" Style="{StaticResource SettingsTextBox}" IsReadOnly="True" FontSize="11" Foreground="#666666"/>
                        <Button Content="ðŸ“‚" Grid.Column="1" Width="35" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="BrowseBackupLocation_Click" Padding="0"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="â° Auto-backup every:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11"/>
                        <ComboBox x:Name="BackupFrequencyCombo" Width="100" Background="#252525" Foreground="#CCCCCC" FontSize="11" BorderBrush="#444444">
                            <ComboBoxItem Content="1 hour" Background="#252525" Foreground="#CCCCCC"/>
                            <ComboBoxItem Content="4 hours" Background="#252525" Foreground="#CCCCCC"/>
                            <ComboBoxItem Content="Daily" Background="#252525" Foreground="#CCCCCC"/>
                            <ComboBoxItem Content="Never" Background="#252525" Foreground="#CCCCCC"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="[Backup Now]" Background="Transparent" Foreground="#CCCCCC" BorderBrush="#444444" BorderThickness="1" Padding="15,5" Cursor="Hand" Click="BackupNowButton_Click"/>
                        <Button Content="[Restore...]" Background="Transparent" Foreground="#CCCCCC" BorderBrush="#444444" BorderThickness="1" Padding="15,5" Cursor="Hand" Margin="10,0,0,0" Click="RestoreButton_Click"/>
                    </StackPanel>
                    
                    <!-- Notifications Section -->
                    <TextBlock Text="â•â•â• Notifications â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="DailyReminderCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Daily reminder" Foreground="#AAAAAA" VerticalAlignment="Center" FontSize="11" Margin="5,0,20,0"/>
                        
                        <CheckBox x:Name="StreakAlertsCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Streak alerts" Foreground="#AAAAAA" VerticalAlignment="Center" FontSize="11" Margin="5,0,20,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="AchievementNotificationsCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Achievement notifications" Foreground="#AAAAAA" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Export Section -->
                    <TextBlock Text="â•â•â• Sync &amp; Export â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <CheckBox x:Name="GoogleDriveSyncCheckBox" VerticalAlignment="Center"/>
                        <TextBlock Text=" Sync to Google Drive (coming soon)" Foreground="#555555" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="[Export Data...]" Background="Transparent" Foreground="#CCCCCC" BorderBrush="#444444" BorderThickness="1" Padding="15,5" Cursor="Hand" Click="ExportDataButton_Click"/>
                        <Button Content="[Import...]" Background="Transparent" Foreground="#CCCCCC" BorderBrush="#444444" BorderThickness="1" Padding="15,5" Cursor="Hand" Margin="10,0,0,0" Click="ImportDataButton_Click"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <Border Grid.Row="2" Background="#0D0D0D" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="30,15">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Log Out" Style="{StaticResource ActionButton}" 
                                Background="Transparent" BorderBrush="#FF4444" Foreground="#FF4444" Width="90" Click="LogOutButton_Click"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource ActionButton}" Click="CancelButton_Click" Background="Transparent" BorderThickness="0"/>
                        <Button Content="Save" Style="{StaticResource ActionButton}" Margin="10,0,0,0" 
                                Background="#2A2A2A" BorderBrush="#444444" Width="80" Click="SaveButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
