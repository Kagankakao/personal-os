<Window x:Class="KeganOS.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
        
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style x:Key="SettingsPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Settings" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="14"/>
                <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        Width="35" Height="35" Background="Transparent" BorderThickness="0"
                        Foreground="#888888" Click="CloseButton_Click" Cursor="Hand"/>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,10,20,10">
                <StackPanel>
                    
                    <!-- Profile Section -->
                    <TextBlock Text="â•â•â• Profile â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ‘¤ Name:" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="DisplayNameTextBox" Grid.Column="1" Style="{StaticResource SettingsTextBox}"/>
                        
                        <TextBlock Text="â­" Grid.Column="2" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="15,0,10,0"/>
                        <TextBox x:Name="SymbolTextBox" Grid.Column="3" Style="{StaticResource SettingsTextBox}" MaxLength="2"/>
                    </Grid>
                    
                    <Button x:Name="ChangeAvatarButton" Content="ðŸ–¼ï¸ Change Avatar..." Style="{StaticResource ActionButton}" 
                            HorizontalAlignment="Left" Click="ChangeAvatarButton_Click"/>
                    
                    <!-- AI Configuration Section -->
                    <TextBlock Text="â•â•â• AI Configuration â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="ðŸ”‘ Gemini API Key" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <PasswordBox x:Name="ApiKeyPasswordBox" Style="{StaticResource SettingsPasswordBox}"/>
                        <Button x:Name="ShowApiKeyButton" Grid.Column="1" Content="ðŸ‘ï¸" Width="40" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="ShowApiKeyButton_Click"/>
                        <Button x:Name="TestApiButton" Grid.Column="2" Content="Test" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="TestApiButton_Click"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Status: " Foreground="#888888"/>
                        <TextBlock x:Name="ApiStatusText" Text="âŒ Not configured" Foreground="#FF6B6B"/>
                    </StackPanel>
                    
                    <TextBlock Text="Get API Key â†—" Foreground="#6B9FFF" Cursor="Hand" Margin="0,5,0,0"
                               MouseLeftButtonDown="GetApiKeyLink_Click" TextDecorations="Underline"/>
                    
                    <!-- Backup Section -->
                    <TextBlock Text="â•â•â• Backup â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="ðŸ“ Backup Location" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="BackupLocationTextBox" Style="{StaticResource SettingsTextBox}" IsReadOnly="True"/>
                        <Button Content="ðŸ“‚" Grid.Column="1" Width="40" Margin="5,0,0,0"
                                Style="{StaticResource ActionButton}" Click="BrowseBackupLocation_Click"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="â° Auto-backup every:" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="BackupFrequencyCombo" Width="120" Background="#252525" Foreground="#CCCCCC">
                            <ComboBoxItem Content="1 hour" IsSelected="True"/>
                            <ComboBoxItem Content="4 hours"/>
                            <ComboBoxItem Content="Daily"/>
                            <ComboBoxItem Content="Never"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Backup Now" Style="{StaticResource ActionButton}" Click="BackupNowButton_Click"/>
                        <Button Content="Restore..." Style="{StaticResource ActionButton}" Margin="10,0,0,0" Click="RestoreButton_Click"/>
                    </StackPanel>
                    
                    <!-- Notifications Section -->
                    <TextBlock Text="â•â•â• Notifications â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="DailyReminderCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Daily reminder" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="StreakAlertsCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Streak alerts" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="AchievementNotificationsCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text=" Achievement notifications" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Export Section -->
                    <TextBlock Text="â•â•â• Sync &amp; Export â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Style="{StaticResource SectionHeader}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox x:Name="GoogleDriveSyncCheckBox" VerticalAlignment="Center"/>
                        <TextBlock Text=" Sync to Google Drive (coming soon)" Foreground="#666666" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Export Data..." Style="{StaticResource ActionButton}" Click="ExportDataButton_Click"/>
                        <Button Content="Import..." Style="{StaticResource ActionButton}" Margin="10,0,0,0" Click="ImportDataButton_Click"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer Buttons -->
            <Border Grid.Row="2" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Style="{StaticResource ActionButton}" Click="CancelButton_Click"/>
                    <Button Content="Save" Style="{StaticResource ActionButton}" Margin="10,0,0,0" 
                            Background="#2D5A27" Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
