<Window x:Class="KeganOS.Views.ProfileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeganOS" 
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:StringToBrushConverter x:Key="StringToBrush" xmlns:local="clr-namespace:KeganOS.Converters"/>
        
        <Style x:Key="ProfileCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="KeganOS" Foreground="#666666" FontSize="12" 
                           Margin="15,10" VerticalAlignment="Center"/>
                <Button Content="âœ•" HorizontalAlignment="Right" Padding="15,10" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF4444"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       Foreground="{TemplateBinding Foreground}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Header -->
            <StackPanel Grid.Row="1" Margin="30,30,30,20">
                <TextBlock Text="Welcome back." Foreground="#FFFFFF" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="Select your profile to continue." Foreground="#666666" FontSize="11" 
                           Margin="0,5,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Profile List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="30,0">
                <ItemsControl x:Name="ProfileList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ProfileBorder" 
                                    Style="{StaticResource ProfileCard}" 
                                    MouseDown="ProfileCard_Click" Tag="{Binding Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Avatar or default icon -->
                                    <Border Width="48" Height="48" VerticalAlignment="Center" 
                                            BorderBrush="#555555" BorderThickness="2" CornerRadius="24" 
                                            Background="#1A1A1A">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#88CC88"/>
                                        </Border.Effect>
                                        <Grid>
                                            <TextBlock Text="ðŸ‘¤" FontSize="20" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Opacity="0.6"
                                                       Visibility="{Binding HasNoAvatar, Converter={StaticResource BoolToVisibility}}"/>
                                            <Ellipse Width="44" Height="44"
                                                     Visibility="{Binding HasAvatar, Converter={StaticResource BoolToVisibility}}">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" Foreground="#CCCCCC" FontSize="14" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="{Binding DisplayLevel, Mode=OneWay}" 
                                                       Foreground="{Binding DisplayLevelColor, Converter={StaticResource StringToBrush}}" 
                                                       FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text=" â€¢ " Foreground="#444444" FontSize="11"/>
                                            <TextBlock Text="{Binding DisplayHours, Mode=OneWay}" Foreground="#88CC88" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="âœï¸" Tag="{Binding Id}" Click="EditProfile_Click"
                                                Background="Transparent" BorderThickness="0" 
                                                Foreground="#888888" FontSize="14" Cursor="Hand"
                                                Padding="5,2" Margin="0,0,5,0" ToolTip="Edit profile"/>
                                        <Button Content="ðŸ—‘ï¸" Tag="{Binding Id}" Click="DeleteProfile_Click"
                                                Background="Transparent" BorderThickness="0"
                                                Foreground="#888888" FontSize="14" Cursor="Hand"
                                                Padding="5,2" Margin="0,0,10,0" ToolTip="Delete profile"/>
                                        <TextBlock Text=">" Foreground="#444444" 
                                               FontSize="16" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Create New Profile -->
            <Border Grid.Row="3" Margin="30,20,30,10" Padding="15" 
                    Background="Transparent" BorderBrush="#333333" BorderThickness="1" 
                    Cursor="Hand" MouseDown="CreateProfile_Click">
                <TextBlock Text="[ + Create New Profile ]" Foreground="#888888" 
                           FontSize="12" HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Footer -->
            <TextBlock Grid.Row="4" Text="Your Personal Life Operating System" 
                       Foreground="#333333" FontSize="10" 
                       HorizontalAlignment="Center" Margin="0,10,0,20"/>
        </Grid>
    </Border>
</Window>
