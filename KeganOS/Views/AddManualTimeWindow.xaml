<Window x:Class="KeganOS.Views.AddManualTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Manual Time" 
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="SpinnerTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Width" Value="60"/>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="â±ï¸ Add Manual Time" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="14"/>
                <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF4444"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Width" Value="35"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       Foreground="{TemplateBinding Foreground}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30,20,30,20">
                <TextBlock Foreground="#666666" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,20">
                    <Run Text="Sometimes you may forget to start the timer."/>
                    <LineBreak/>
                    <Run Text="Add your work time manually here."/>
                </TextBlock>
                
                <!-- Date -->
                <TextBlock Text="ðŸ“… Date" Style="{StaticResource InputLabel}" FontSize="12"/>
                <DatePicker x:Name="DateInput" SelectedDate="{x:Static sys:DateTime.Today}"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib"
                            Background="#252525" Foreground="#CCCCCC" BorderBrush="#444444"
                            Margin="0,0,0,20" Height="30" VerticalContentAlignment="Center"
                            SelectedDateFormat="Short"/>
                
                <!-- Duration -->
                <TextBlock Text="â° Duration (HH:MM:SS)" Style="{StaticResource InputLabel}" FontSize="12"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox x:Name="HoursInput" Style="{StaticResource SpinnerTextBox}" Text="00" Width="50" Padding="5"/>
                    <TextBlock Text=":" Foreground="#444444" VerticalAlignment="Center" Margin="5,0"/>
                    
                    <TextBox x:Name="MinutesInput" Style="{StaticResource SpinnerTextBox}" Text="25" Width="50" Padding="5"/>
                    <TextBlock Text=":" Foreground="#444444" VerticalAlignment="Center" Margin="5,0"/>
                    
                    <TextBox x:Name="SecondsInput" Style="{StaticResource SpinnerTextBox}" Text="00" Width="50" Padding="5"/>
                </StackPanel>
                
                <!-- Note -->
                <TextBlock Text="ðŸ“ Note" Style="{StaticResource InputLabel}" FontSize="12"/>
                <TextBox x:Name="NoteInput" Background="#1A1A1A" Foreground="#CCCCCC" 
                         BorderBrush="#333333" BorderThickness="1" Height="80" TextWrapping="Wrap"
                         AcceptsReturn="True" MaxLength="500" Margin="0,0,0,20" 
                         Padding="8" FontSize="11" VerticalScrollBarVisibility="Auto"/>
                
                <!-- Update Pixe.la -->
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="UpdatePixelaCheckBox" IsChecked="True" VerticalAlignment="Center"/>
                    <TextBlock Text=" [âœ“] Sync with Pixe.la" Foreground="#888888" VerticalAlignment="Center" FontSize="12" Margin="5,0,0,0"/>
                </StackPanel>
                
            </StackPanel>
            </ScrollViewer>
            
            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#0D0D0D" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="30,15">
                <Grid>
                    <Button Content="[ Cancel ]" HorizontalAlignment="Left"
                            Background="Transparent" Foreground="#666666" BorderThickness="0"
                            Click="CancelButton_Click" Cursor="Hand" Padding="0"/>
                    
                    <Button Content="Add Session" HorizontalAlignment="Right"
                            Background="#2A2A2A" Foreground="#88CC88" BorderBrush="#333333" BorderThickness="1"
                            Padding="20,8" Click="AddTimeButton_Click" Cursor="Hand" FontSize="12"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
