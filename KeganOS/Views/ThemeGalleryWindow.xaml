<Window x:Class="KeganOS.Views.ThemeGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Theme Gallery" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Window.Resources>
        <Style x:Key="ThemeCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#666666"/>
                    <Setter Property="Background" Value="#222222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Theme Gallery" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" 
                           Margin="20,15"/>
                <Button Content="✕" HorizontalAlignment="Right" 
                        Background="Transparent" Foreground="#666666"
                        BorderThickness="0" Padding="15,10" Cursor="Hand"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="30,10,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/> <!-- Carousel -->
                    <ColumnDefinition Width="1*"/> <!-- Details -->
                </Grid.ColumnDefinitions>

                <!-- Carousel Column -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Arrow -->
                        <Button Content="◀" Grid.Column="0" Click="PrevButton_Click"
                                Background="Transparent" Foreground="#444444" FontSize="20"
                                BorderThickness="0" Cursor="Hand" Padding="10" VerticalAlignment="Center"/>

                        <!-- Theme Card -->
                        <Border Grid.Column="1" Background="#151515" BorderBrush="#333333" BorderThickness="1" 
                                Height="220" VerticalAlignment="Center" Margin="10,0">
                            <Grid x:Name="ThemePreviewArea">
                                <Border x:Name="PreviewBackground" Background="#0D0D0D"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Aa" x:Name="PreviewText" FontSize="32" FontWeight="Bold" Foreground="#FFFFFF"/>
                                    <Ellipse Width="40" Height="40" x:Name="PreviewAccent" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Right Arrow -->
                        <Button Content="▶" Grid.Column="2" Click="NextButton_Click"
                                Background="Transparent" Foreground="#444444" FontSize="20"
                                BorderThickness="0" Cursor="Hand" Padding="10" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Dot Indicators -->
                    <StackPanel Grid.Row="1" x:Name="DotsPanel" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,15,0,0">
                        <!-- Dots added in code-behind -->
                    </StackPanel>
                </Grid>

                <!-- Details Column -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="ThemeNameText" Text="[Theme Name]" Foreground="#FFFFFF" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="ThemeDescText" Text="A description of the theme's aesthetic and core colors." 
                               Foreground="#888888" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,20" Height="60"/>
                    
                    <Button x:Name="ApplyButton" Content="Apply Theme" Click="ApplyButton_Click"
                            Background="#2A2A2A" BorderBrush="#444444" BorderThickness="1"
                            Foreground="#88CC88" FontWeight="Bold" Height="40"
                            Cursor="Hand" IsEnabled="False" Margin="0,0,0,10"/>
                    
                    <Button Content="Create Custom" Click="CreateCustom_Click"
                            Background="Transparent" BorderBrush="#333333" BorderThickness="1"
                            Foreground="#666666" Height="35" Cursor="Hand" FontSize="11"/>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay" Grid.RowSpan="4" Background="#AA000000" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="███░░░░░░░" Foreground="#88CC88" HorizontalAlignment="Center"/>
                    <TextBlock Text="Applying Theme..." Foreground="#FFFFFF" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
