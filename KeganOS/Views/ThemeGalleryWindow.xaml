<Window x:Class="KeganOS.Views.ThemeGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Theme Gallery" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Window.Resources>
        <Style x:Key="ThemeCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#666666"/>
                    <Setter Property="Background" Value="#222222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Theme Gallery" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" 
                           Margin="20,15"/>
                <Button Content="✕" HorizontalAlignment="Right" 
                        Background="Transparent" Foreground="#666666"
                        BorderThickness="0" Padding="15,10" Cursor="Hand"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Select a theme to apply" Foreground="#888888" FontSize="14" Margin="0,0,0,20"/>

                <!-- Theme Carousel -->
                <!-- Carousel Container -->
                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Arrow -->
                    <Button Content="◀" Grid.Column="0" Click="PrevButton_Click"
                            Background="Transparent" Foreground="#666666" FontSize="24"
                            BorderThickness="0" Cursor="Hand" Padding="15"/>

                    <!-- Theme Card (Single Item View) -->
                    <Border Grid.Column="1" Style="{StaticResource ThemeCard}" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>

                            <!-- Color Preview -->
                            <Border Grid.Row="0" CornerRadius="8,8,0,0" x:Name="PreviewBackground">
                                <Grid>
                                    <Ellipse Width="80" Height="80" x:Name="PreviewAccent" Opacity="0.8"/>
                                    <TextBlock Text="Aa" x:Name="PreviewText" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontSize="24" FontWeight="Bold"/>
                                </Grid>
                            </Border>

                            <!-- Info -->
                            <StackPanel Grid.Row="1" Margin="15">
                                <TextBlock x:Name="ThemeNameText" Text="Theme Name" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="ThemeDescText" Text="Description goes here..." Foreground="#888888" FontSize="12" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Right Arrow -->
                    <Button Content="▶" Grid.Column="2" Click="NextButton_Click"
                            Background="Transparent" Foreground="#666666" FontSize="24"
                            BorderThickness="0" Cursor="Hand" Padding="15"/>
                </Grid>

                <!-- Dot Indicators -->
                <StackPanel Grid.Row="2" x:Name="DotsPanel" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </Grid>

            <!-- Action Bar -->
            <Border Grid.Row="3" Background="#111111" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Create Custom" Click="CreateCustom_Click"
                            Background="Transparent" BorderBrush="#333333" BorderThickness="1"
                            Foreground="#888888" Width="120" Height="35" Margin="0,0,10,0"
                            Cursor="Hand"/>
                    
                    <Button x:Name="ApplyButton" Content="Apply Theme" Click="ApplyButton_Click"
                            Background="#FFFFFF" BorderThickness="0"
                            Foreground="#000000" FontWeight="Bold" Width="120" Height="35"
                            Cursor="Hand" IsEnabled="False"/>
                </StackPanel>
            </Border>
            
            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Background="#AA000000" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Applying Theme..." Foreground="White" FontSize="18"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
