<Window x:Class="KeganOS.Views.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Profile" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Border BorderBrush="#333333" BorderThickness="1" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Input -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="âš ï¸ Delete Profile" Foreground="#FF5555" FontSize="18" FontWeight="Bold"/>
                <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- Content -->
            <StackPanel Grid.Row="1">
                <TextBlock TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15">
                    <Run Text="Are you sure you want to delete "/>
                    <Run x:Name="ProfileNameText" Text="[ProfileName]" FontWeight="Bold"/>
                    <Run Text="?"/>
                </TextBlock>
                
                <TextBlock Text="âš ï¸ This will permanently delete:" Foreground="#FF5555" Margin="0,0,0,5"/>
                <TextBlock Text="â€¢ Your journey" Foreground="#888888" Margin="10,0,0,2"/>
                <TextBlock Text="â€¢ Profile settings" Foreground="#888888" Margin="10,0,0,2"/>
                <TextBlock Text="â€¢ Achievement progress" Foreground="#888888" Margin="10,0,0,2"/>
                <TextBlock Text="â€¢ Pixe.la connection" Foreground="#888888" Margin="10,0,0,15"/>
                
                <TextBlock TextWrapping="Wrap" FontStyle="Italic" Foreground="#666666" Margin="0,0,0,15">
                    "Every ending is a new beginning. Your story remains â€” only this chapter closes."
                </TextBlock>
            </StackPanel>
            
            <!-- Input -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap" Foreground="#AAAAAA" Margin="0,0,0,5">
                    <Run Text="Type "/>
                    <Run x:Name="RequiredNameText" Text="[Name]" FontWeight="Bold" Foreground="#CCCCCC"/>
                    <Run Text=" to confirm:"/>
                </TextBlock>
                <TextBox x:Name="ConfirmationInput" 
                         Background="#1A1A1A" Foreground="#FFFFFF" 
                         BorderBrush="#444444" BorderThickness="1"
                         Padding="8" CaretBrush="#FFFFFF"
                         TextChanged="ConfirmationInput_TextChanged"/>
            </StackPanel>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="CancelButton_Click"
                        Background="Transparent" Foreground="#888888" 
                        BorderBrush="#333333" BorderThickness="1"
                        Padding="15,5" Cursor="Hand" Margin="0,0,10,0"/>
                <Button x:Name="DeleteButton" Content="ðŸ—‘ï¸ Delete" Click="DeleteButton_Click"
                        Background="#331111" Foreground="#FF5555" 
                        BorderBrush="#662222" BorderThickness="1"
                        Padding="15,5" Cursor="Hand" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
