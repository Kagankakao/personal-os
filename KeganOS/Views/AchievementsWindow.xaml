<Window x:Class="KeganOS.Views.AchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Achievements" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Achievements" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" 
                           Margin="20,15"/>
                <Button Content="âœ•" HorizontalAlignment="Right" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF4444"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       Foreground="{TemplateBinding Foreground}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- User Stats Summary -->
            <StackPanel Grid.Row="1" Margin="30,10,30,20">
                <Grid Margin="0,0,0,8">
                    <TextBlock x:Name="LevelText" Text="Level 0" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="XpText" Text="0 / 0 XP" Foreground="#666666" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Height="24">
                    <TextBlock x:Name="AsciiProgressBar" Text="" Foreground="#88CC88" FontSize="16" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock x:Name="XpRemainingText" Text="" 
                           Foreground="#444444" FontSize="11" Margin="0,5,0,0" FontStyle="Italic"/>
            </StackPanel>

            <!-- Badges List -->
            <ScrollViewer Grid.Row="2" Margin="30,0">
                <StackPanel>
                    <!-- Unlocked Section -->
                    <TextBlock Text="â•â•â• Unlocked Badges â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Foreground="#555555" FontSize="10" Margin="0,0,0,15"/>
                    <ItemsControl x:Name="UnlockedAchievementsList" Margin="0,0,0,30">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="80" Height="100" Margin="0,0,10,15" Background="#111111" BorderBrush="{Binding Color}" BorderThickness="1">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Icon}" Foreground="{Binding Color}" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#CCCCCC" FontSize="10" FontWeight="Bold" TextAlignment="Center" Margin="5,0"/>
                                        <TextBlock Text="[ Unlocked ]" Foreground="#666666" FontSize="8" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Locked Section -->
                    <TextBlock Text="â•â•â• Locked Badges â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Foreground="#555555" FontSize="10" Margin="0,0,0,15"/>
                    <ItemsControl x:Name="LockedAchievementsList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="80" Height="100" Margin="0,0,10,15" Background="#111111" BorderBrush="#333333" BorderThickness="1">
                                    <StackPanel VerticalAlignment="Center" Opacity="0.4">
                                        <TextBlock Text="ðŸ”’" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="???" Foreground="#888888" FontSize="10" FontWeight="Bold" TextAlignment="Center" Margin="5,0"/>
                                        <TextBlock Text="{Binding RequirementText}" Foreground="#FF6B6B" FontSize="8" HorizontalAlignment="Center" Margin="0,2,0,0" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <TextBlock Grid.Row="3" Text="Keep focused to unlock more!" Foreground="#666666" FontSize="10" HorizontalAlignment="Center" Margin="0,15,0,15"/>
        </Grid>
    </Border>
</Window>
