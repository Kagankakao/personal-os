<Window x:Class="KeganOS.Views.AchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Achievements" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0D0D0D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Achievements" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" 
                           Margin="20,15"/>
                <Button Content="âœ•" HorizontalAlignment="Right" 
                        Background="Transparent" Foreground="#666666"
                        BorderThickness="0" Padding="15,10" Cursor="Hand"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- User Stats Summary -->
            <Border Grid.Row="1" Background="#1A1A1A" Margin="20,0,20,15" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="60" Height="60" CornerRadius="30" Background="#333333" Margin="0,0,15,0">
                         <TextBlock x:Name="LevelBadgeText" Text="5" Foreground="#FFD700" FontSize="24" FontWeight="Bold" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="LevelTitleText" Text="Level 5" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <ProgressBar x:Name="XpProgressBar" Height="4" Background="#333333" Foreground="#FFD700" BorderThickness="0" Margin="0,5,0,5"/>
                        <TextBlock x:Name="XpText" Text="450 / 600 XP" Foreground="#888888" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Badges Grid -->
            <ScrollViewer Grid.Row="2" Margin="20,0">
                <ItemsControl x:Name="AchievementsList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="100" Height="120" Margin="5" Background="#111111" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" ToolTip="{Binding Description}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFD700"/>
                                                <Setter Property="Background" Value="#221F00"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Icon}" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <BlurEffect Radius="5"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Foreground="White" FontSize="11" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" Margin="5,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Name}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                        <Setter Property="Text" Value="???"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <BlurEffect Radius="3"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <TextBlock x:Name="RewardText" Foreground="#888888" FontSize="9" HorizontalAlignment="Center" Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding XpReward, StringFormat=+{0} XP}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                        <Setter Property="Text" Value="{Binding RequirementText}"/>
                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <TextBlock Grid.Row="3" Text="Keep focused to unlock more!" Foreground="#666666" FontSize="10" HorizontalAlignment="Center" Margin="0,15,0,15"/>
        </Grid>
    </Border>
</Window>
