<UserControl x:Class="KeganOS.Views.Components.CelebrationOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Collapsed"
             Background="#CC000000">
    <Grid>
        <Border Background="#F20D0D0D"/>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- ASCII Art Header -->
            <TextBlock Text="      _____ _      ______ ____  _____       _______ _____ ____  _   _ &#10;     / ____| |    |  ____|  _ \|  __ \   /\|__   __|_   _/ __ \| \ | |&#10;    | |    | |    | |__  | |_) | |__) | /  \  | |    | || |  | |  \| |&#10;    | |    | |    |  __| |  _ &lt;|  _  / / /\ \ | |    | || |  | | . ` |&#10;    | |____| |____| |____| |_) | | \ \/ ____ \| |   _| || |__| | |\  |&#10;     \_____|______|______|____/|_|  \_\/_/    \_\_|  |_____\____/|_| \_|" 
                       Foreground="#FFCC00" FontSize="10" FontFamily="Consolas" HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <TextBlock x:Name="TitleText" Text="MAJOR MILESTONE REACHED" Foreground="#FFFFFF" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <Rectangle Height="1" Width="300" Fill="#333333" Margin="0,0,0,40"/>
            
            <!-- Badge Icon -->
            <TextBlock x:Name="BadgeIcon" Text="ðŸ†" FontSize="80" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock x:Name="AchievementName" Text="Double Digits: Level 10" Foreground="#FFFFFF" FontSize="20" 
                       HorizontalAlignment="Center" Margin="0,0,0,10" FontWeight="Bold"/>
            
            <TextBlock x:Name="RewardText" Text="+500 XP" Foreground="#88CC88" FontSize="16" 
                       HorizontalAlignment="Center" FontWeight="Bold"/>

            <Button Content="[ CONTINUE ASCENSION ]" Width="200" Height="50" Margin="0,60,0,0" 
                    Background="Transparent" Foreground="#666666" BorderThickness="0"
                    Click="CloseButton_Click" Cursor="Hand" FontSize="12">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
