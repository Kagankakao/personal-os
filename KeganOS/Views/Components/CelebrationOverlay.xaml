<UserControl x:Class="KeganOS.Views.Components.CelebrationOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Collapsed"
             Background="#CC000000">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Glow Effect -->
            <Border Width="300" Height="300" CornerRadius="150" Background="#33FFFFFF">
                <Border.Effect>
                    <DropShadowEffect Color="Gold" BlurRadius="100" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                
                <!-- Badge Icon -->
                <TextBlock x:Name="BadgeIcon" Text="ðŸ†" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            
            <TextBlock x:Name="TitleText" Text="MILESTONE REACHED!" Foreground="Gold" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,30,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Black" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <TextBlock x:Name="AchievementName" Text="Double Digits: Level 10" Foreground="White" FontSize="20" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock x:Name="RewardText" Text="+500 XP" Foreground="#6BFF6B" FontSize="16" 
                       HorizontalAlignment="Center" FontWeight="Bold"/>

            <Button Content="AWESOME!" Width="150" Height="40" Margin="0,40,0,0" 
                    Background="#333333" Foreground="White" BorderBrush="Gold" BorderThickness="1"
                    Click="CloseButton_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
        <!-- Animations will be triggered in code-behind -->
    </Grid>
</UserControl>
