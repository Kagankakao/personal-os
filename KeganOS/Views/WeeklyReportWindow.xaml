<Window x:Class="KeganOS.Views.WeeklyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Weekly Report" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Padding="15,10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0,0,0,2" Margin="0,0,10,0" Cursor="Hand">
                            <ContentPresenter ContentSource="Header" TextElement.Foreground="#666666" TextElement.FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFFFFF"/>
                                <Setter TargetName="Border" Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#222222"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Chart -->
                <RowDefinition Height="Auto"/> <!-- Stats -->
                <RowDefinition Height="*"/>    <!-- AI Insight -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <Grid Grid.Row="0" Margin="20" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š Weekly Report" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="â—€" Click="PrevWeek_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Background="Transparent" Foreground="#888888" FontSize="16" Cursor="Hand" Margin="0,0,10,0"/>
                    <TextBlock x:Name="DateRangeText" Text="Week of Dec 18-24, 2024" Foreground="#FFFFFF" FontSize="14" VerticalAlignment="Center"/>
                    <Button Content="â–¶" Click="NextWeek_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Background="Transparent" Foreground="#888888" FontSize="16" Cursor="Hand" Margin="10,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="âœ•" Click="CloseButton_Click" Background="Transparent" Foreground="#666666" BorderThickness="0" Cursor="Hand" FontSize="14"/>
            </Grid>

            <!-- 2. Chart Section -->
            <Border Grid.Row="1" Background="#111111" Margin="20,0" CornerRadius="8" Padding="20">
                <Grid Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Bars Container -->
                    <Grid x:Name="ChartGrid" Grid.Row="0" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Columns will be populated dynamically -->
                    </Grid>
                    
                    <!-- Labels -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="M" Grid.Column="0" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="T" Grid.Column="1" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="W" Grid.Column="2" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="T" Grid.Column="3" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="F" Grid.Column="4" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="S" Grid.Column="5" Foreground="#666666" HorizontalAlignment="Center"/>
                        <TextBlock Text="S" Grid.Column="6" Foreground="#666666" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- 3. Stats Strip -->
            <Grid Grid.Row="2" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
                    <TextBlock x:Name="TotalHoursText" Text="Total: 16 hrs" Foreground="#FFFFFF" Margin="0,0,20,0"/>
                    <TextBlock x:Name="AvgHoursText" Text="Avg: 2.3/day" Foreground="#888888" Margin="0,0,20,0"/>
                    <TextBlock x:Name="StreakText" Text="Streak: 5 days" Foreground="#FFD700"/>
                </StackPanel>
            </Grid>

            <!-- 4. AI Insight -->
            <Grid Grid.Row="3" Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="â•â•â• AI Insight â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Foreground="#333333" Margin="0,0,0,10"/>
                
                <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header=" ðŸ“ Notes ">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                            <TextBlock x:Name="NotesInsightText" Text="Loading insights..." Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="20"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header=" ðŸ’¼ Focus ">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                            <TextBlock x:Name="FocusInsightText" Text="Select tab to generate..." Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="20"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header=" ðŸŒŸ Life ">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                            <TextBlock x:Name="LifeInsightText" Text="Select tab to generate..." Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="20"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- 5. Footer -->
            <Border Grid.Row="4" Background="#111111" Padding="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Export PDF" Click="Export_Click" Background="Transparent" Foreground="#888888" BorderBrush="#333333" BorderThickness="1" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Share" Click="Share_Click" Background="#FFFFFF" Foreground="#000000" FontWeight="Bold" BorderThickness="0" Padding="20,5"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
