<Window x:Class="KeganOS.Views.WeeklyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Weekly Report" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        FontFamily="Consolas">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Padding="15,10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0,0,0,2" Margin="0,0,10,0" Cursor="Hand">
                            <ContentPresenter ContentSource="Header" TextElement.Foreground="#666666" TextElement.FontSize="14" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFFFFF"/>
                                <Setter TargetName="Border" Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#222222"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Chart -->
                <RowDefinition Height="Auto"/> <!-- Stats -->
                <RowDefinition Height="*"/>    <!-- AI Insight -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <Grid Grid.Row="0" Margin="30,20,30,10" MouseDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ“Š Weekly Report" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="[â—€]" Click="PrevWeek_Click" Background="Transparent" Foreground="#888888" FontSize="12" Cursor="Hand" BorderThickness="0"/>
                    <TextBlock x:Name="DateRangeText" Text="Dec 18 - Dec 24, 2024" Foreground="#AAAAAA" FontSize="12" VerticalAlignment="Center" Margin="10,0"/>
                    <Button Content="[â–¶]" Click="NextWeek_Click" Background="Transparent" Foreground="#888888" FontSize="12" Cursor="Hand" BorderThickness="0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="âœ•" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF4444"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       Foreground="{TemplateBinding Foreground}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- 2. ASCII Chart Section -->
            <StackPanel Grid.Row="1" Margin="30,10,30,20">
                <Grid Height="140">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/> <!-- Y-axis label space -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Y-axis scale -->
                    <Grid Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <TextBlock Text="10h" Foreground="#333333" FontSize="9" VerticalAlignment="Top"/>
                        <TextBlock Text="5h" Foreground="#333333" FontSize="9" VerticalAlignment="Center"/>
                        <TextBlock Text="0h" Foreground="#333333" FontSize="9" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    </Grid>

                    <!-- The ASCII Bars Container -->
                    <Grid x:Name="ChartGrid" Grid.Column="1" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Injected in code-behind: StackPanels of ASCII blocks -->
                    </Grid>
                </Grid>
                
                <!-- X-axis Labels -->
                <Grid Margin="40,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="MON" Grid.Column="0" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="TUE" Grid.Column="1" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="WED" Grid.Column="2" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="THU" Grid.Column="3" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="FRI" Grid.Column="4" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="SAT" Grid.Column="5" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                    <TextBlock Text="SUN" Grid.Column="6" Foreground="#555555" HorizontalAlignment="Center" FontSize="9"/>
                </Grid>
            </StackPanel>

            <!-- 3. Stats Strip -->
            <Border Grid.Row="2" BorderBrush="#222222" BorderThickness="0,1" Margin="30,0" Padding="0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="TOTAL HOURS" Foreground="#444444" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalHoursText" Text="16.4 hrs" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="DAILY AVG" Foreground="#444444" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="AvgHoursText" Text="2.3 hrs" Foreground="#FFFFFF" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="ACTIVE DAYS" Foreground="#444444" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="StreakText" Text="5 days" Foreground="#88CC88" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 4. Prometheus Insight Section -->
            <Grid Grid.Row="3" Margin="30,20,30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="0,0,0,15">
                    <TextBlock Text="â•â• Prometheus Insight â•â•â•â•â•â•â•â•â•â•â•â•â•â•" Foreground="#333333" FontSize="10" VerticalAlignment="Center"/>
                    <Button x:Name="ConsultPrometheusButton" Content="ðŸ”¥ Consult Prometheus" HorizontalAlignment="Right"
                            Background="Transparent" Foreground="#87CEEB" BorderThickness="0" 
                            Cursor="Hand" FontSize="10" Click="ConsultPrometheus_Click"/>
                </Grid>
                
                <TabControl Grid.Row="1" Background="#0D0D0D" BorderThickness="0" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header=" [ Weekly Theme ] ">
                        <ScrollViewer Margin="0,15,0,0">
                            <TextBlock x:Name="NotesInsightText" Text="Focusing heavily on development tasks this week. Your concentration peaked on Wednesday during the deep-work session." 
                                       Foreground="#888888" TextWrapping="Wrap" LineHeight="18" FontSize="11"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header=" [ Critical Focus ] ">
                        <ScrollViewer Margin="0,15,0,0">
                            <TextBlock x:Name="FocusInsightText" Text="Prometheus suggests checking your late-night sessions; they seem to be less efficient than your morning blocks." 
                                       Foreground="#888888" TextWrapping="Wrap" LineHeight="18" FontSize="11"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- 5. Footer -->
            <Border Grid.Row="4" Background="#0D0D0D" BorderBrush="#222222" BorderThickness="0,1,0,0" Padding="30,15">
                <Grid>
                    <Button Content="[ Export Data ]" Click="Export_Click" Background="Transparent" Foreground="#444444" BorderThickness="0" Cursor="Hand" FontSize="10" HorizontalAlignment="Left"/>
                    <Button Content="Close Report" Click="CloseButton_Click" Background="#1A1A1A" Foreground="#CCCCCC" BorderBrush="#333333" BorderThickness="1" 
                            Padding="20,8" HorizontalAlignment="Right" Cursor="Hand" FontSize="11"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
