<Window x:Class="KeganOS.Views.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ask Prometheus"
        Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        FontFamily="Consolas"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    
    <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="ðŸ”¥" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock x:Name="PromptText" Text="What would you like to know?" 
                           Foreground="#CCCCCC" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Input -->
            <TextBox Grid.Row="1" x:Name="InputTextBox"
                     Background="#1A1A1A"
                     Foreground="#CCCCCC"
                     BorderBrush="#444444" BorderThickness="1"
                     Padding="10"
                     CaretBrush="#CCCCCC"
                     FontSize="13"
                     AcceptsReturn="False"
                     KeyDown="InputTextBox_KeyDown"/>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" Click="CancelButton_Click"
                        Background="Transparent" Foreground="#888888"
                        BorderBrush="#444444" BorderThickness="1"
                        Padding="15,5" Cursor="Hand"/>
                <Button Content="Ask ðŸ”¥" Click="OkButton_Click"
                        Background="#2A2A2A" Foreground="#CCCCCC"
                        BorderBrush="#555555" BorderThickness="1"
                        Padding="15,5" Margin="10,0,0,0" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
